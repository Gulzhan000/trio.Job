@model IEnumerable<Domain.Entities.UserProfile>

<h2>Пользовательские профили</h2>
<p><a asp-action="Create">Создать новый профиль</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Номер телефона</th>
            <th>Резюме</th>
            <th>Описание</th>
            <th>Дата рождения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PhoneNumber</td>
                <td>@item.Resume</td>
                <td>@item.Description</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

