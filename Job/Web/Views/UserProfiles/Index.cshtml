@model IEnumerable<Domain.Entities.UserProfile>

<h2>Список профилей</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Создать профиль</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Никнейм</th>
            <th>Номер телефона</th>
            <th>Резюме</th>
            <th>Пользователь</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nickname</td>
                <td>@item.PhoneNumber</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Resume))
                    {
                        <a href="@item.Resume" target="_blank" class="btn btn-info btn-sm">Открыть</a>
                    }
                    else
                    {
                        <span>Нет резюме</span>
                    }
                </td>
                <td>@item.User?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUP" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.IdUP" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
