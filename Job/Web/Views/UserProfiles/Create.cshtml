@model Domain.Entities.UserProfile

<h2 class="text-center">Создать профиль</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nickname">Никнейм</label>
        <input asp-for="Nickname" class="form-control" />
        <span asp-validation-for="Nickname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Номер телефона</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group d-flex align-items-end mb-3">
        <div class="flex-grow-1 me-2">
            <label asp-for="Resume">Создайте резюме и прикрепите ссылку</label>
            <input asp-for="Resume" class="form-control" />
            <span asp-validation-for="Resume" class="text-danger"></span>
        </div>
        <a href="https://sweetcv.com/ru/?utm_source=chatgpt.com"
           class="btn btn-info" target="_blank">
            Создать резюме
        </a>
    </div>
    <div class="form-group mb-3">
        <label asp-for="IdUser">Выберите пользователя</label>
        <select asp-for="IdUser" asp-items="ViewBag.Users" class="form-select">
            <option value="">Выберите пользователя из списка</option>
        </select>
        <span asp-validation-for="IdUser" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary me-2">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Вернуться назад</a>
    </div>
</form>
