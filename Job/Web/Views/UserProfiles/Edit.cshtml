@model Domain.Entities.UserProfile

<h2>Редактировать профиль</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdUP" />

    <div class="form-group">
        <label asp-for="Nickname" class="control-label">Никнейм</label>
        <input asp-for="Nickname" class="form-control" />
        <span asp-validation-for="Nickname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Resume" class="control-label">Ссылка на резюме</label>
        <input asp-for="Resume" class="form-control" />
        <span asp-validation-for="Resume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Выберите пользователя</label>
        <select asp-for="IdUser" class="form-control" asp-items="ViewBag.Users">
            <option value="">Выберите пользователя</option>
        </select>
        <span asp-validation-for="IdUser" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>