@model IEnumerable<Domain.Entities.User>

<h2>Пользователи</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Добавить пользователя</a> 
</p>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Электронная почта</th>
            <th>Дата рождения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUser" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.IdUser" class="btn btn-warning btn-sm">Детали</a>
                    <a asp-action="Delete" asp-route-id="@item.IdUser" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
