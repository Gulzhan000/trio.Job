@model Domain.Entities.User

<h2 class="text-center">Добавить пользователя</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Фамилия</label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Электронная почта</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <!-- Добавляем отступ снизу -->
        <label asp-for="DateOfBirth">Дата рождения</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <!-- Обернем кнопки в div, чтобы задать отступы -->
    <div class="mt-3">
        <button type="submit" class="btn btn-primary me-2">Создать</button>
        <a asp-action="Index" class="btn btn-secondary">Вернуться назад</a>
    </div>
</form>
